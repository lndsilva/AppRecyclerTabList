<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cardModeloFilmes"
    android:layout_width="200dp"
    android:layout_height="250dp"
    android:checkable="true"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgModeloFilmes"
            android:layout_width="180dp"
            android:layout_height="200dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="2dp"
            android:contentDescription="@string/imagem_filmes"
            android:scaleType="centerCrop"
            android:src="@drawable/jogos_vorazes" />

        <TextView
            android:id="@+id/txtModeloTituloFilmes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5sp"
            android:text="@string/jogos_vorazes"
            android:textAllCaps="true"
            android:textColor="#000"
            android:textSize="15sp"
            android:textStyle="bold" />
    </LinearLayout>

</androidx.cardview.widget.CardView>